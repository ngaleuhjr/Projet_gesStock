{% extends 'accueil.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
     <div class="row">
            <div class="col-md-6">
            <h1>Inscription</h1>
                {{ form_start(registrationForm) }}
                  <fieldset class="col-mb-3"> 
                     <legend >Mon Identite</legend>
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.email) }}
                  </fieldset> 

                   
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}
              
                    <button type="submit" class="btn btn-primary btn-lg my-6">M'inscrire</button>
                    <a href="{{ path('app_login') }}" class="btn btn-secondary">Me Connecter<a/>
                {{ form_end(registrationForm) }}
            </div>
     </div>
   </section>

{% endblock %}
