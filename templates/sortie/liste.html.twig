{% extends 'accueil.html.twig' %}

{% block title %}gestion des sorties{% endblock %}

{% block body %}
    <div class="row">
        <div class="container col-md-6">
            <div class="card ">
                <div class="card-header">Liste des ventes</div>
                <div class="card-body">
                    <table class="table table-striped">
                        <tr>
                            <th>Identifiant</th>
                            <th>Date</th>
                            <th>Quantit√© vendue</th>
                            <th>Produit</th>
                        </tr>
                       
                        {% for s in sorties %}
                        <tr>
                            <td>{{ s.id }}</td>
                            <td>{{ s.dateSortie|date('d/m/Y') }}</td>
                            <td>{{ s.qteSortie }}</td>
                            <td>{{ s.produit }}</td>
                            <td>{{ s.prixSortie }}</td>
                        </tr>
                        {% endfor %}
                        
                    </table>
                </div>
            </div>
        </div>
        <div class="container col-md-6">
            <div class="card ">
                <div class="card-header">Formulaire de gestion des ventes</div>
                <div class="card-body">
                {% if error_message is defined %}
                    <div class='alert alert-danger '>{{ error_message }}</div>
                {% endif %}
                     {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
